include ../mixins/jinja
doctype html
html(lang="en")
  head
    meta(charset= "UTF-8")
    meta(name= "viewport", content= "initial-scale= 1.0, width= device-width, user-scalable=no")
    meta(http-equiv= "X-UA-Compatible", content= "IE=Edge")
    meta(name= "format-detection", content="telephone=no")
    title Tesol
    link(rel= "stylesheet", href!= static("'css/style.css'"))
    link(href= "https://fonts.googleapis.com/css?family=Roboto:300,400,500,600,700,800,900", rel= "stylesheet")


  body.body
    block header
      header.header
        .container
          .row
            .cell.cols.flex
              .header__wrapper
                img(src!= static("'img/logo.jpg'"))
                a(href="mailto:verify@global-tesol.com.ua") verify@global-tesol.com.ua
    block main
      .section(style="background-image: url('/static/img/bg.jpg')")
        .container
          .modal.modal--hidden(data-type="info")
            .modal__content.center
            .row
              .cell.cols.flex.justify-center
                button.button.js-back Back
          .modal.modal--hidden(data-type="error")
            .title.center ERROR
            .modal__items
              .text Check the number again.
            .row
              .cell.cols.flex.justify-center
                button.button.js-back Back
          .modal(data-type="verify")
            h1.title Certificate ID#:
            form.form
              .row
                .cell.cols
                  .modal__items
                    .modal__input
                      input.input(name="id", autocomplete='off' type="number")
                    .modal__input
                      input.input(name="id", autocomplete='off' type="number")
                    .modal__input
                      input.input(name="id", autocomplete='off' type="number")
                    .modal__input
                      input.input(name="id", autocomplete='off' type="number")
                    .modal__input
                      input.input(name="id", autocomplete='off' type="number")
                    .modal__input
                      input.input(name="id", autocomplete='off' type="number")
              .row
                .cell.cols.flex.justify-center
                  button.button.js-submit Verification
      .sertificates
        .container
          .row
            .cell.cols.cols--6-sm.cols--4-lg.mb-30
              div TESOL Specialization Certificate Program 60 hours
              img.sertificates__image(src!= static("'img/sample1.jpg'"))
            .cell.cols.cols--6-sm.cols--4-lg.mb-30
              div TESOL Specialization Certificate Program 60 hours
              img.sertificates__image(src!= static("'img/sample2.jpg'"))
            .cell.cols.cols--6-sm.cols--4-lg.mb-30
              div TESOL Specialization Certificate Program 60 hours
              img.sertificates__image(src!= static("'img/sample3.jpg'"))
  block scripts
    script(src!= static("'js/vendor.js'"))
    script(src!= static("'js/main.js'"))
